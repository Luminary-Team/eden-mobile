<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Eden" parent="Theme.AppCompat.Light.NoActionBar">
<!--        <item name="colorPrimary">@color/white</item>-->
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">#111</item>
        <item name="colorOnPrimary">@color/edenBlue</item>
        <item name="android:textColorHint">#999</item>
        <item name="android:editTextColor">#111</item>
        <item name="android:statusBarColor">#0000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:progressTint">@color/edenBlue</item>
        <item name="android:indeterminateTint">@color/edenBlue</item>
    </style>

    <style name="full_screen" parent="Base.Theme.Eden">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="to_circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="arredondar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="tablet" parent="Base.Theme.Eden">
        <item name="android:textSize">32sp</item>
    </style>
    
    <style name="Theme.Eden" parent="Base.Theme.Eden" />
</resources>